<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <% if !@pin.image.url.nil? %>
     <img src="<%= @pin.image.url(:medium) %>">
     <!-- <img src="<%= @pin.image(:medium) %>">  -->
  <% end %>
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
      <%= link_to "#{@pin.url}",  "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
  <%= link_to repin_path(@pin), class: "btn btn-primary btn-sm", method: "post" do %>
  <i class="fa fa-thumb-tack" aria-hidden="true"></i>
  Repin!
  <% end %>
  <h3>This pin has been repinned by:</h3>
  <% @users.each_slice(3) do |row| %>
    <div class="row">
      <% row.each do |user|  %>
      <div>
      <%= "#{user.first_name} #{user.last_name}" %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
<br/>
<a href="/">
<i class="fa fa-home"></i>
  Back to Home
</a>
