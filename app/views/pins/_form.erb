<h1>Create or Edit a Pin</h1>

<form class="form-horizontal" role="form">

<div class="form-group">
<% if !@errors.nil? %>
<div class="error">
<label class="control-label col-sm-2"> 
<%= pluralize(@errors.count, "error") %> prohibited this pin from being saved: 
</label>
<ul>
  <% @errors.full_messages.each do |msg| %>
    <li><%= "#{msg}" %></li>
  <% end %>
</ul>
<br />
<% end %>
</div>

<div class="form-group">
<%= form_for(@pin, multipart: true) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="row">
  <div class="form-group">
  <label class="control-label col-sm-2" for="pin_title">Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="form-group">
  <label class="control-label col-sm-2"  for="pin_category_id">Category</label>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>

  <div class="form-group">
  <label class="control-label col-sm-2" for="pin_url">Url</label>
  <%= f.url_field(:url, options={}) %>
  </div>

  <div class="form-group">
  <label class="control-label col-sm-2"  for="pin_slug">Slug</label>
  <%= f.text_field :slug %>
  </div>
  </div> <!-- end of row -->

  <div class="row">
  <div class="form-group">
  <label class="control-label col-sm-2" for="pin_description">Description</label>
  <%= f.text_area :text  %>
  </div>
  </div>  <!-- end of row -->

  <div class="row">
  <div class="form-group">
  <label class="control-label col-sm-2"  for="pin_image">Image</label>
  <%= f.file_field :image %>
  </div>

   <div class="form-group">
   <%= f.fields_for :pinning do |p| %>
   </div>

   <div class="form-group">
   <label class="control-label col-sm-2">Which board?</label>
   </div>
   <div class="form-group">
     <%= p.collection_select(:board_id, current_user.pinnable_boards, :id,
     :name, {}, {class: "form-control col-sm-2"}) %>
     <%= p.hidden_field :user_id, value: current_user.id %>
     <% end %>
     </div>  <!-- end of row -->


     <div class="form-group col-sm-2">
    <%= f.submit  %>
    <% end %>
    </div>
    </div>
     </div>
    </div> 
</form>
